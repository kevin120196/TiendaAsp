@model List<MVCWEB.Models.GuanteModel.guanteModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-12">
        <hr />
        <button style="height:80px;padding:0em;" type="submit" onclick="document.location.href='@Url.Content("~/Guante/Create/")'" name="name" value="Nuevo">Nuevo</button>
        <hr />
    </div>
</div>

<hr />


<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-hover table-responsive-md">
            <thead class="thead-dark">
                <tr>
                    <th style="font-family:cursive;text-align:center">#</th>
                    <th style="font-family:cursive;text-align:center">Guante</th>
                    <th style="font-family:cursive;text-align:center">Descripcion</th>
                    <th style="font-family:cursive;text-align:center">Talla</th>
                    <th style="font-family:cursive;text-align:center">Categoria</th>
                    <th style="font-family:cursive;text-align:center">Colores</th>
                    <th style="font-family:cursive;text-align:center">Marca</th>
                    <th style="font-family:cursive;text-align:center">Modelo</th>
                    <th style="font-family:cursive;text-align:center">Acciones</th>
                </tr>
            </thead>
            @foreach (var Guante in Model)
            {
        <tr>
            <td style="font-family:cursive;text-align:center">@Guante.idGuante</td>
            <td style="font-family:cursive;text-align:center">
                @if (!string.IsNullOrEmpty(Guante.imagenGuante))
                {
                    <img src="@Url.Content(Guante.imagenGuante)" style="width:250px;height:250px" />
                }
            </td>
            <td style="font-family:cursive;text-align:center">@Guante.Descripcion</td>
            <td style="font-family:cursive;text-align:center">@Guante.Talla</td>
            <td style="font-family:cursive;text-align:center">@Guante.NombreMarca</td>
            <td style="font-family:cursive;text-align:center">@Guante.NombreColores</td>
            <td style="font-family:cursive;text-align:center">@Guante.NombreMarca</td>
            <td style="font-family:cursive;text-align:center">@Guante.NombreModelo</td>
            <td style="font-family:cursive;text-align:center">
                <button type="button" style="padding:0em" onclick="document.location.href='@Url.Content("~/Guante/Edit/"+Guante.idGuante)'" id="buttonRed" name="name" value="Actualizar"> <i class="far fa-user"></i>Actualizar</button>

                <button type="button" style="padding:0em" onclick="document.location.href='@Url.Content("~/Guante/Delete/"+Guante.idGuante)'" id="buttonYellow" name="name" value="Eliminar">Eliminar</button>
            </td>
        </tr>

            }

        </table>
    </div>
</div>


