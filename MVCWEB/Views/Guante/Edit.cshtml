@model MVCWEB.Models.GuanteModel.guanteEdit
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Edit", "Guante", FormMethod.Post, new { enctype = "multipart/form-data", role = "form", @class = "formulario" }))
        {
            <h2>Edición de Guantes</h2>
            <hr />
            @Html.HiddenFor(model => model.idGuante)
            @Html.HiddenFor(model => model.imagenGuante)
            @Html.AntiForgeryToken()

            <div class="form-group grupoControl">
                @Html.LabelFor(model => model.ImageFile, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <span class="btn btn-default btn-file">
                        @if (!string.IsNullOrEmpty(Model.imagenGuante))
                        {
                            <img src="@Url.Content(Model.imagenGuante)" style="width:250px;height:250px" />
                        }
                    </span>
                </div>
            </div>
            <div class="form-group grupoControl">
                @Html.LabelFor(model => model.ImageFile, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <span class="btn btn-default btn-file">
                        @Html.TextBoxFor(model => model.ImageFile, new { type = "file", @class = "form-control-file" })
                    </span>
                </div>
            </div>

            <div class="form-group grupoControl">
                @Html.Label("Descripcion")
                @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control" })
            </div>

            <div class="form-group grupoControl">
                @Html.Label("Talla")
                @Html.TextBoxFor(model => model.Talla, new { @class = "form-control" })
            </div>
            <div class="form-group grupoControl">
                @Html.DisplayName("Categoria")
                @Html.DropDownListFor(model => model.idCategoria, new SelectList(Model.CategoriaList, "idCategoria", "nombreCategoria"), "Seleccione", new { @class = "form-control" })
            </div>

            <div class="form-group grupoControl">
                @Html.DisplayName("Modelo")
                @Html.DropDownListFor(model => model.idModelo, new SelectList(Model.ModeloList, "idModelo", "nombreModelo"), "Seleccione", new { @class = "form-control" })
            </div>

            <div class="form-group grupoControl">
                @Html.DisplayName("Marca")
                @Html.DropDownListFor(model => model.idMarca, new SelectList(Model.MarcaList, "idMarca", "nombreMarca"), "Seleccione", new { @class = "form-control" })
            </div>
            <div class="form-group grupoControl">
                @Html.DisplayName("Colores")
                @Html.DropDownListFor(model => model.idColores, (MultiSelectList)new SelectList(Model.ColoresList, "idColores", "nombreColores"), "Seleccione", new { @class = "form-control" })
            </div>

            <div class="form-group grupoControl">
                <hr />
                <button style="width:280px; height:100px;padding:0em" type="submit"><i class="far fa-edit"></i>Actualizar</button>
                <hr />
                <i class="fas fa-edit"></i>
            </div>


        }
    </div>
</div>


