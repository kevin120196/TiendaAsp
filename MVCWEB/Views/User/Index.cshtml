@model List<MVCWEB.Models.UserViewModel.UserTableViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Usuarios Registrados</h2>

<div class="row">
    <div class="col-md-12">
        <hr />
        <button style="height:80px;padding:0em;" type="submit" onclick="document.location.href='@Url.Content("~/User/Create/")'" name="name" value="Nuevo">Nuevo</button>
        <hr />
    </div>
</div>

<hr />


<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-hover table-responsive-md">
            <thead class="thead-dark">
                <tr>
                    <th style="font-family:cursive;text-align:center">#</th>
                    <th style="font-family:cursive;text-align:center">Nombre</th>
                    <th style="font-family:cursive;text-align:center">Correo Electronico</th>
                    <th style="font-family:cursive;text-align:center">Contraseña</th>
                    <th style="font-family:cursive;text-align:center">Acciones</th>
                </tr>
            </thead>
            @foreach (var UserE in Model)
            {
        <tr>

            <td style="font-family:cursive;text-align:center">@UserE.idUser</td>
            <td style="font-family:cursive;text-align:center">@UserE.nombreUser</td>
            <td style="font-family:cursive;text-align:center">@UserE.email</td>
            <td style="font-family:cursive;text-align:center">@UserE.password</td>
            <td style="font-family:cursive;text-align:center">
                <button type="button" style="padding:0em" onclick="document.location.href='@Url.Content("~/User/Edit/"+UserE.idUser)'" id="buttonRed" name="name" value="Actualizar" >Actualizar</button>
                
                <button type="button" style="padding:0em" onclick="document.location.href='@Url.Content("~/User/Delete/"+UserE.idUser)'"  id="buttonYellow" name="name" value="Eliminar" >Eliminar</button>
            </td>
        </tr>

            }

        </table>
    </div>
</div>
