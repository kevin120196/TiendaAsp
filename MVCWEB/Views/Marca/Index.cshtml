@model List<MVCWEB.Models.MarcaModel.marcaModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-12">
        <hr />
        <button style="height:80px;padding:0em;" type="submit" onclick="document.location.href='@Url.Content("~/Marca/Create/")'" name="name" value="Nuevo">Nuevo</button>
        <hr />
    </div>
</div>

<hr />


<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-hover table-responsive-md">
            <thead class="thead-dark">
                <tr>
                    <th style="font-family:cursive;text-align:center">#</th>
                    <th style="font-family:cursive;text-align:center">Marca</th>
                    <th style="font-family:cursive;text-align:center">Acciones</th>
                </tr>
            </thead>
            @foreach (var Marca in Model)
            {
                <tr>

                    <td style="font-family:cursive;text-align:center">@Marca.idMarca</td>
                    <td style="font-family:cursive;text-align:center">@Marca.NombreMarca</td>
                    <td style="font-family:cursive;text-align:center">
                        <button type="button" style="padding:0em" onclick="document.location.href='@Url.Content("~/Marca/Edit/"+Marca.idMarca)'" id="buttonRed" name="name" value="Actualizar">Actualizar</button>

                        <button type="button" style="padding:0em" onclick="document.location.href='@Url.Content("~/Marca/Delete/"+Marca.idMarca)'" id="buttonYellow" name="name" value="Eliminar">Eliminar</button>
                    </td>
                </tr>

            }

        </table>
    </div>
</div>
