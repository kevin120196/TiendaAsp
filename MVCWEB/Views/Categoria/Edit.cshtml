@model MVCWEB.Models.CategoriaModel.editCategoria
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Edit", "Categoria", FormMethod.Post, new { role = "form", @class = "formulario" }))
        {
            <h2>Edición de Categoria</h2>
            <hr />
            @Html.HiddenFor(d => d.idCategoria)
            @Html.AntiForgeryToken()

            <div class="form-group grupoControl">

                @Html.ValidationMessage("error", new { @class = "text-danger" })
                @Html.LabelFor(d => d.NombreCategoria)
                @Html.TextBoxFor(d => d.NombreCategoria, new { @class = "form-control" })

            </div>


            <div class="form-group grupoControl">
                <hr />
                <button style="width:280px; height:100px;padding:0em" type="submit"><i class="far fa-edit"></i>Actualizar</button>
                <hr />
                <i class="fas fa-edit"></i>
            </div>
        }
    </div>
</div>
