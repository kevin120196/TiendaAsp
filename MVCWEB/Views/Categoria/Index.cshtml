@model List<MVCWEB.Models.CategoriaModel.categoriaModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-12">
        <hr />
        <button style="height:80px;padding:0em;" type="submit" onclick="document.location.href='@Url.Content("~/Categoria/Create/")'" name="name" value="Nuevo">Nuevo</button>
        <hr />
    </div>
</div>

<hr />


<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-hover table-responsive-md">
            <thead class="thead-dark">
                <tr>
                    <th style="font-family:cursive;text-align:center">#</th>
                    <th style="font-family:cursive;text-align:center">Nombre Categoria</th>
                    <th style="font-family:cursive;text-align:center">Acciones</th>
                </tr>
            </thead>
            @foreach (var Cat in Model)
            {
                <tr>

                    <td style="font-family:cursive;text-align:center">@Cat.idCategoria</td>
                    <td style="font-family:cursive;text-align:center">@Cat.NombreCategoria</td>
                    <td style="font-family:cursive;text-align:center">
                        <button type="button" style="padding:0em" onclick="document.location.href='@Url.Content("~/Categoria/Edit/"+Cat.idCategoria)'" id="buttonRed" name="name" value="Actualizar"> <i class="far fa-user"></i>Actualizar</button>

                        <button type="button" style="padding:0em" onclick="document.location.href='@Url.Content("~/Categoria/Delete/"+Cat.idCategoria)'" id="buttonYellow" name="name" value="Eliminar">Eliminar</button>
                    </td>
                </tr>

            }

        </table>
    </div>
</div>
